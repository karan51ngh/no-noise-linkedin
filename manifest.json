{
    "manifest_version": 3,
    "name": "No Noise LinkedIn",
    "description": "Block Ads, News, Suggested & Promoted posts on LinkedIn. Activate Focus Mode for a clean, distraction-free professional feed.",
    "version": "2.0.1",
    "action": { "default_popup": "index.html" },
    "permissions": ["storage"],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["images/*.png", "images/*.svg"],
        "matches": ["https://www.linkedin.com/*"]
      }
    ],
    "content_scripts": [
    {
      "js": ["src/content-script/index.tsx"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}